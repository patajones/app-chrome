{
  "manifest_version": 3,
  "name": "Detector de SEI",
  "version": "1.0",
  "description": "Detecta quando você está logado ou deslogado em páginas do Sistema Eletrônico de Informações (SEI)",
  
  "permissions": [
    "activeTab",
    "storage"
  ],
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Status do SEI",
    "default_icon": {
      "16": "icons/sei-16.png",
      "32": "icons/sei-32.png",
      "48": "icons/sei-48.png",
      "128": "icons/sei-128.png"
    }
  },
  
  "background": {
    "service_worker": "background.js"
  },
  
  "icons": {
    "16": "icons/sei-16.png",
    "32": "icons/sei-32.png", 
    "48": "icons/sei-48.png",
    "128": "icons/sei-128.png"
  }
}